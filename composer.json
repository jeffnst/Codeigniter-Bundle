{
    "name": "dsv/ci-bundle",
    "description": "CI-Bundle implements Modular Model View Controller(MMVC) pattern into Codeigniter Framework",
    "type": "codeigniter-third-party",
    "require": {
        "php": ">=5.4.0",
        "symfony/console": "^3.0",
        "symfony/filesystem": "^3.0",
        "symfony/process": "^3.0",        
        "composer/installers": "^1.0"
    },
    "authors": [
        {
            "name": "David Sosa Valdes",
            "email": "david.sosa.valdes@gmail.com"
        }
    ],
    "license": "MIT",
    "autoload" :{
        "psr-4": {
            "CI_Bundle\\Install\\": "src/"
        }
    },
    "bin": ["bin/ci-bundle"],   
    "scripts": {
        "post-package-install": [
            "php vendor/bin/ci-bundle install:post"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        },
        "installer-name": "CI-Bundle"   
   }      
}
