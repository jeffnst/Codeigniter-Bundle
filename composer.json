{
    "name": "dsv/codeigniter-bundle",
    "description": "Codeigniter-Bundle implements Modular Model View Controller(MMVC) pattern into Codeigniter Framework",
    "type": "codeigniter-third-party",
    "keywords": [
        "codeigniter",
        "codeigniter-bundle",
        "bundle",
        "codeigniter-module",
        "module",
        "codeigniter-mmvc",
        "mmvc"
    ],    
    "require": {
        "php": ">=5.4.0",
        "symfony/console": "^3.0",
        "symfony/filesystem": "^3.0",
        "symfony/process": "^3.0",        
        "composer/installers": "^1.0"
    },
    "authors": [
        {
            "name": "David Sosa Valdes",
            "email": "david.sosa.valdes@gmail.com"
        }
    ],
    "license": "MIT",
    "autoload" :{
        "psr-4": {
            "CI_Bundle\\Install\\": "src/"
        }
    },
    "bin": ["bin/ci-bundle"]
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        },
        "installer-name": "CI-Bundle"   
   }      
}
